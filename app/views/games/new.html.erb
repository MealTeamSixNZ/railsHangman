<div align="center">
  <h1>New Game</h1>

  <%= form_with model: @game do |form| %>
    <div>
      <%= form.label :player_name %><br>
      <%= form.text_field :player %>
    </div>

    <div>
      <%= form.label :difficulty %><br>
      <%= form.select :difficulty, [["Easy", "1"], ["Regular", "2"], ["Hard", "3"]] %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>

  <% @game.errors.full_messages_for(:player).each do |message| %>
    <div><%= message %></div>
  <% end %>
  <% @game.errors.full_messages_for(:lives).each do |message| %>
    <div><%= message %></div>
  <% end %>
</div>
